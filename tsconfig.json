{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": false,
      "moduleResolution": "node",
      "module": "ES6",
      "target": "es5",
      "lib": ["es2015", "dom"],
      "allowJs": true,
      "skipLibCheck": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
